{
  "name": "@openstax/highlighter",
  "version": "1.1.0",
  "main": "dist/highlighter.js",
  "license": "MIT",
  "scripts": {
    "build": "webpack --config=webpack.config.js --mode=production",
    "jest-watch": "jest --watchAll",
    "test": "jest --verbose --maxWorkers=2",
    "type-check": "tsc",
    "js-lint": "eslint src/**/*.js",
    "typescript-lint": "tslint -p ./tsconfig.json",
    "typescript-watch": "tsc --noEmit --watch",
    "watch": "npm-run-all jest-watch webpack-watch typescript-watch",
    "webpack-watch": "webpack --config=webpack.config.js --mode=development --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^23.3.3",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "eslint": "^5.6.1",
    "eslint-loader": "^2.1.1",
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.3",
    "ts-loader": "^5.2.1",
    "tslint": "^5.11.0",
    "tslint-loader": "^3.6.0",
    "typescript": "^3.1.1",
    "typescript-babel-jest": "^1.0.5",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|js)$",
    "transform": {
      "^.+\\.ts$": "typescript-babel-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleDirectories": [
      "node_modules"
    ],
    "setupFiles": [
      "./test/helpers/Range"
    ]
  },
  "dependencies": {
    "serialize-selection": "^1.1.1"
  }
}
