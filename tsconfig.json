{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "outDir": "./dist/",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "alwaysStrict": true,
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "**/*.js"
  ]
}
